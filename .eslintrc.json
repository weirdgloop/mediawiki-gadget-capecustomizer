{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "tinycolor": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "import/extensions": "off",
      "operator-linebreak": "off",
      "no-multiple-empty-lines": ["error", { "max": 2 }],
      "radix": "off"
    }
}
